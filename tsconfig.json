{
  "compilerOptions": {
    "declaration": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "removeComments": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "skipDefaultLibCheck": true
  },
  "lib": [
    "es2016",
    "dom"
  ]
}